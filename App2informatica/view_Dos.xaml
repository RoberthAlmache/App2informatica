<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2informatica.view_Dos">
    <ContentPage.Content>
        <StackLayout>
           
                <Frame BackgroundColor="#2196F3" Padding="18" CornerRadius="0">
                <Label Text="Semana 2: Ventana - DOS" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
                </Frame>

            <Entry x:Name="txtValorUno" Keyboard="Numeric" Placeholder="Ingrese un Valor"/>
            <Entry x:Name="txtValorDos" Keyboard="Numeric" Placeholder="Ingrese otro Valor"/>
            <Entry x:Name="txtResultado" Keyboard="Numeric" Placeholder="El resultado es:" IsEnabled="false"/>

            <Button x:Name="btnSumar" Text="Suma" Clicked="btnSumar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>